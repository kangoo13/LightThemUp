            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".SignupActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".AchievActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".PlaylistActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ScanActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ShopActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".AchievActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".SynActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
