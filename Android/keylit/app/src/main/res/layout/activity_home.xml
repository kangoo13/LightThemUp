<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="80dp"
        android:orientation="vertical">

        <ImageView android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

            <TextView
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Keylite Sync"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textAlignment="center" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/switch_sync"
                android:layout_weight="1"
                android:switchMinWidth="70dp"
                android:checked="false" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_scan"
                android:layout_width="180dp"
                android:layout_height="69dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_scan"
                android:layout_weight="1" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_playlist"
                android:background="@drawable/btn_playlist"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="69dp"
                android:layout_weight="1" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_shop"
                android:background="@drawable/btn_shop"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="69dp"
                android:layout_weight="1" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_achiev"
                android:layout_gravity="center"
                android:background="@drawable/btn_achiev"
                android:layout_width="180dp"
                android:layout_height="69dp"
                android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:background="@drawable/action_log_out"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>